{
  "name": "vscext-copy-path",
  "displayName": "Path Copier",
  "description": "Copy file name, path, and line info.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscext-copy-path.copyFileNameTab",
        "title": "Copy File Name"
      },
      {
        "command": "vscext-copy-path.copyFileNameNoExtTab",
        "title": "Copy File Name Without Extension"
      },
      {
        "command": "vscext-copy-path.copyFileNameLineEditor",
        "title": "Copy File Name with Line Number"
      },
      {
        "command": "vscext-copy-path.copyRelativePathLineEditor",
        "title": "Copy Relative Path with Line Number"
      },
      {
        "command": "vscext-copy-path.copyFullPathLineEditor",
        "title": "Copy Full Path with Line Number"
      }
    ],
    "menus": {
      "editor/title/context": [
        {
          "command": "vscext-copy-path.copyFileNameTab",
          "group": "1_cutcopypaste@100",
          "when": "resourceScheme == 'file'"
        },
        {
          "command": "vscext-copy-path.copyFileNameNoExtTab",
          "group": "1_cutcopypaste@101",
          "when": "resourceScheme == 'file'"
        }
      ],
      "explorer/context": [
        {
          "command": "vscext-copy-path.copyFileNameTab",
          "group": "6_copypath@100",
          "when": "resourceScheme == 'file'"
        },
        {
          "command": "vscext-copy-path.copyFileNameNoExtTab",
          "group": "6_copypath@101",
          "when": "resourceScheme == 'file'"
        }
      ],
      "editor/context": [
        {
          "command": "vscext-copy-path.copyFileNameLineEditor",
          "group": "pathlncopy@100",
          "when": "resourceScheme == 'file'"
        },
        {
          "command": "vscext-copy-path.copyRelativePathLineEditor",
          "group": "pathlncopy@101",
          "when": "resourceScheme == 'file'"
        },
        {
          "command": "vscext-copy-path.copyFullPathLineEditor",
          "group": "pathlncopy@102",
          "when": "resourceScheme == 'file'"
        }
      ],
      "editor/lineNumber/context": [
        {
          "command": "vscext-copy-path.copyFileNameLineEditor",
          "group": "pathlncopy@100",
          "when": "resourceScheme == 'file'"
        },
        {
          "command": "vscext-copy-path.copyRelativePathLineEditor",
          "group": "pathlncopy@101",
          "when": "resourceScheme == 'file'"
        },
        {
          "command": "vscext-copy-path.copyFullPathLineEditor",
          "group": "pathlncopy@102",
          "when": "resourceScheme == 'file'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
